<header class="chatHeader">
    <div class="logout">
        <a href="/logout"><img class="logoutImage" src="/public/images/x.png"></a>

    </div>
    <div class="info">
        Online Chat
    </div>
</header>

<div class="chatContentWrapper">
    <div class="chatContent">
        <div id="messageWrapper2">
            <!----------------------------------------------------------->
            <!--            vypisovani Q-->
            {if $questatus == false}
            Jste {echo $queuecount}. v pořadí,
            prosíme počkejte pár minut, než na vás dojde řada.
            {/if}
            <!----------------------------------------------------------->       
            <!--                    vypisovani zprav-->
            {else}
            {foreach $k in $vypiskonverzace}

            {if $k->from == 1}
            <div  class="messageNameRed">
                {echo $k->firstname." ".$k->lastname}          
            </div>
            {/if}
            {if $k->from != 1} 
            <div  class="messageNameBlue">
                {echo $k->firstname." ".$k->lastname}
            </div>
            {/if}

            <div class="message">
                {echo $k->message}
            </div>
            {/foreach}        
            {/else}
            <div id="clearence"></div>
        </div>

    </div>

    {if $questatus == true}
    <div class="chatInputs">
        <form id="inputForm" method="post" action="/submitChat">

            {if isset($error)}
            <span class="error">
                {echo $error}
            </span>
            {/if}
            <textarea class="chatTextarea" rows="3" cols="25" name="chatTextInput" required></textarea>
            <div class="chatButtonWrapper">
                <input class="chatButton" type="submit" name="chatTextSubmit" value="Odeslat" />
            </div>
        </form>
    </div>
    {/if}

</div>