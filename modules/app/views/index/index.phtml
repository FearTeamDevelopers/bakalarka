<header class="chatHeader">
    <div class="logout">
        <a href="/logout">X</a>
    </div>
    <div class="info">
        Online Chat
    </div>
</header>

<div class="chatContentWrapper">
    <div class="chatContent">

        <!----------------------------------------------------------->
        <!--            vypisovani Q-->
        {if $queuecount != 0}
        Jste {echo $queuecount}. v pořadí
        počkejte pár dní než předchozí uchazeč ukončí konverzaci.
        {/if}
        <!----------------------------------------------------------->       
        <!--                    vypisovani zprav-->
        {else}
        <div class="messageWrapper">
            {foreach $k in $vypiskonverzace}

            {if $k->from = 1}
            <div  class="messageNameRed">
                {echo $k->firstname." ".$k->lastname}          
            </div>
            {/if}
            {if $k->from <> 1} 
            <div  class="messageNameBlue">
                {echo $k->firstname." ".$k->lastname}
            </div>
            {/if}

            <div class="message">
                {echo $k->message}
            </div>
            {/foreach}        
        </div>
        {/else}

    </div>

    {if $queuecount == 0}
    <div class="chatInputs">
        <form id="inputForm" method="post" action="/submitChat">

            {if isset($error)}
            <span class="error">
                {echo $error}
            </span>
            {/if}
            
            <br/>
            <input type="text" name="chatTextInput" class="chatTextInput" required/>
            <input type="submit" name="chatTextSubmit" value="Odeslat" />
        </form>
    </div>
    {/if}

</div>